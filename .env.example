# Configuración del servidor
NODE_ENV=production
PORT=3000

# MongoDB
MONGODB_URI="mongodb+srv://usuario:contraseña@cluster.mongodb.net/"

# Telegram User API (no Bot API)
TELEGRAM_API_ID=tu_api_id
TELEGRAM_API_HASH="tu_api_hash"
TELEGRAM_PHONE_NUMBER="+1234567890"
TELEGRAM_GROUP_ID="-100xxxxxxxxxx"

# API Security (generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
API_SECRET=tu_clave_secreta_muy_larga_y_segura

# CORS (dominio de tu frontend)
CORS_ORIGIN=https://tudominio.com

# Cron Job Configuration (horas entre verificaciones)
CHECK_INTERVAL_HOURS=6
